<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" style="-fx-border-style: solid; -fx-border-width: 10;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Login">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <Button fx:id="loginButton" alignment="CENTER" mnemonicParsing="false" onAction="#onLoginButton" text="LOGIN" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <GridPane.margin>
            <Insets left="70.0" />
        </GridPane.margin>
    </Button>
    <PasswordField fx:id="passwordField" alignment="CENTER" promptText="Case Sensitive!" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="30.0" right="30.0" />
        </GridPane.margin>
    </PasswordField>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets left="30.0" right="30.0" />
        </GridPane.margin>
    </TextField>
    <Label text="Username" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets left="70.0" />
        </GridPane.margin>
    </Label>
    <Label text="Password" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="70.0" />
        </GridPane.margin>
    </Label>
    <Label text="Welcome!" GridPane.columnIndex="1">
        <GridPane.margin>
            <Insets bottom="50.0" left="70.0" />
        </GridPane.margin>
    </Label>
    <Label alignment="CENTER" text="Enter your Username and Password below to start scheduling!" textAlignment="CENTER" wrapText="true" GridPane.columnIndex="1">
        <GridPane.margin>
            <Insets top="30.0" />
        </GridPane.margin>
    </Label>
</GridPane>
