<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateCustomer">
    <children>
        <GridPane layoutX="120.0" layoutY="120.0" prefHeight="250.0" prefWidth="312.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Customer ID" />
                <Label text="Customer Name" GridPane.rowIndex="1" />
                <Label text="Address" GridPane.rowIndex="2" />
                <Label text="Postal Code" GridPane.rowIndex="3" />
                <Label text="Phone Number" GridPane.rowIndex="4" />
                <TextField fx:id="customerID" editable="false" GridPane.columnIndex="1" />
                <TextField fx:id="customerName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="address" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="postalCode" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextField fx:id="phoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Label fx:id="firstLevelLabel" text="Label" GridPane.rowIndex="5" />
                <Label text="Country" GridPane.rowIndex="6" />
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSave" text="Save" GridPane.rowIndex="7" />
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancel" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                <ComboBox fx:id="firstLevel" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <ComboBox fx:id="countryDropdown" onAction="#onCountryDropdown" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            </children>
        </GridPane>
        <Label layoutX="200.0" layoutY="38.0" text="Update a Customer">
            <font>
                <Font/>
            </font></Label>
    </children>
</AnchorPane>
